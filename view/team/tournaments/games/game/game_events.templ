package game

import "ultigamecast/pbmodels"
import "github.com/labstack/echo/v5"
import "fmt"

templ GameEventList(c echo.Context, events []*pbmodels.Events) {
	<div class="flex flex-col items-center">
		<div id="new-event" sse-swap="NewEvent" hx-swap="afterend"></div>
		for _, e := range events {
			@GameEvent(e)
		}
	</div>
}

templ GameEvent(event *pbmodels.Events) {
	<div id={ fmt.Sprintf("event-%s", event.Id) } sse-swap={ event.Id }>
		{ event.Id }
		{ string(event.Type) }
	</div>
}
